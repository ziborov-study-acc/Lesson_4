@model FlowerServiceLibrary.WarehouseFlower

<h1>Редактирование информации о цветке</h1>

<h4>@Model.Flower.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FlowerEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PlaceId" type="hidden" />
            <input asp-for="FlowerId" type="hidden" />

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.PlaceId" class="btn btn-danger">Назад</a>
                <input type="submit" value="Редактировать" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


