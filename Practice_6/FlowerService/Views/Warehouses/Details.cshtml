@using FlowerServiceLibrary
@model FlowerServiceLibrary.Warehouse


<h1>Подробности о складе</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    <div class="form-group">
        <div class="list-group">
            @if (Model.WarehouseFlowers.Count() == 0)
            {
                <div class="list-group-item">
                    <h4 class="text-danger"> Цветы на складе отсутствуют</h4>
                </div>
            }
            else
            {
                foreach (WarehouseFlower warehouseFlower in Model.WarehouseFlowers)
                {
                    <div class="list-group-item">
                        @warehouseFlower.Flower.Name
                        <span class="float-right">@warehouseFlower.Amount</span>
                    </div>
                }
            }
        </div>
    </div>
</div>


<div class="form-group">
    <a asp-action="Index" class="btn btn-primary">Назад</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Редактировать</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>

</div>
