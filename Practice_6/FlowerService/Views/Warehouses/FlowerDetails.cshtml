@model FlowerServiceLibrary.WarehouseFlower

<h1>Подробности о цветке</h1>
<div>
    <h4>@Model.Flower.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Place.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Flower.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flower.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.PlaceId" class="btn btn-primary">Назад</a>
    <a asp-action="FlowerEdit" asp-route-placeId="@Model.PlaceId" asp-route-flowerId="@Model.FlowerId" class="btn btn-info">Редактировать</a>
    <a asp-action="FlowerDelete" asp-route-placeId="@Model.PlaceId" asp-route-flowerId="@Model.FlowerId" class="btn btn-danger">Удалить</a>
</div>

