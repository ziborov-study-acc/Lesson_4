@model FlowerServiceLibrary.SupplyFlower

<h1>Добавление цветка</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FlowerCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="SupplyId" type="hidden" />
            <div class="form-group">
                <label asp-for="FlowerId" class="control-label"></label>
                <select asp-for="FlowerId" asp-items="@ViewBag.Flowers" class="form-control"></select>
                <span asp-validation-for="FlowerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.SupplyId" class="btn btn-danger">Назад</a>
                <input type="submit" value="Добавить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
