@using FlowerServiceLibrary;
@model FlowerServiceLibrary.Supply

<h1>Подробности поставки</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Plantation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plantation.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Warehouse.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Warehouse.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.SheduledDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SheduledDate)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ClosedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosedDate)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <div class="form-group">
        <div class="list-group">
            @if (Model.SupplyFlowers.Count() == 0)
            {
                <div class="list-group-item">
                    <h4 class="text-danger"> Цветы в поставке отсутствуют</h4>
                </div>
            }
            else
            {
                foreach (SupplyFlower supplyFlower in Model.SupplyFlowers)
                {
                    <div class="list-group-item">
                        @supplyFlower.Flower.Name
                        <span class="float-right">@supplyFlower.Amount</span>
                    </div>
                }
            }
        </div>
    </div>
</div>
<div class="form-group">
    <a asp-action="Index" class="btn btn-primary">Назад</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Редактировать</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>

</div>
